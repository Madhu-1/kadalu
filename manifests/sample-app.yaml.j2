# -*- mode: yaml -*-
---
apiVersion: v1
kind: Pod
metadata:
  name: pod1
  labels:
    app: smallfile
spec:
  containers:
  - name: smallfile
    image: quay.io/ekuric/smallfile:latest
    imagePullPolicy: IfNotPresent
    volumeMounts:
    - mountPath: "/mnt/gluster"
      name: csivol
  volumes:
  - name: csivol
    persistentVolumeClaim:
      claimName: pv1
